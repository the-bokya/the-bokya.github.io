---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Navbar from "../components/Navbar.astro";
import type NavLink from "./NavProp";
import Footer from "./Footer.astro";
import footerBorder from "../assets/img/footer.svg";
const pages_proto: any[] = [
  { title: "Home", link: "/" },
  { title: "Blog", link: "/blogs/" },
];
const pages: NavLink[] = pages_proto.map((i) => {
  i.selected = Astro.url.pathname == i.link;
  return i;
});
const footer = `url(${footerBorder.src})`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    x-data="{hide_nav: false}"
    @scroll.window="hide_nav = (window.pageYOffset < 500) ? false : true"
  >
    <Navbar pages={pages} />
    <main>
      <slot />
    </main>
    <Footer />
  </body><style is:global define:vars={{ footer }}>
    @import url("https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Sen:wght@400..800&display=swap");
    * {
      box-sizing: border-box;
    }
    article {
      text-align: justify;
      word-wrap: break-word;
    }
    main a {
      text-decoration: none;
      color: rgb(0, 255, 123);
      text-shadow:
        0px -2px 3px rgb(255, 15, 15),
        0 1px 6px rgb(187, 182, 255);
    }
    html {
      background-color: black;
    }
    h1 {
      font-family: "Sen", sans-serif;
      font-optical-sizing: auto;
      font-weight: 800;
      font-style: normal;

      font-size: 3em;
      color: white;
      text-align: justify;
      text-shadow:
        0 -2px 10px red,
        0 -4px 10px rgba(21, 255, 0, 0.34),
        0px 5px 20px rgba(255, 0, 162, 0.701);
    }
    body {
      background-image: var(--footer);
      background-repeat: no-repeat;
      background-size: contain;
      background-position: center bottom;
      display: grid;
      grid-template-rows:
        [top-start] 7rem [top-end main-start] minmax(calc(100vh - 7rem), 100%)
        [main-end footer-start] 20rem [footer-end];
      grid-template-columns:
        [body-start] 1fr [main-start nav-start] min(95%, 800px)
        [main-end nav-end] 1fr [body-end];
      gap: 2rem 0;
      margin: 0;
      padding: 0;
    }
    main {
      grid-column: main-start / main-end;
      grid-row: main-start / main-end;
      color: white;
      font-family: "Space Mono", monospace;
      width: 100%;
      height: max-content;
    }
  </style>
</html>
